{
  "$schema": "https://staticwebapp.net/schema/latest/staticwebapp.config.schema.json",
  "routes": [
    { "route": "/products-list",   "rewrite": "/api/products-list" },
    { "route": "/products-list/*", "rewrite": "/api/products-list/*" },

    { "route": "/wc-categories",   "rewrite": "/api/wc-categories" },
    { "route": "/wc-categories/*", "rewrite": "/api/wc-categories/*" },

    { "route": "/publish",         "rewrite": "/api/publish" },
    { "route": "/publish/*",       "rewrite": "/api/publish/*" },

    { "route": "/unpublish",       "rewrite": "/api/unpublish" },
    { "route": "/unpublish/*",     "rewrite": "/api/unpublish/*" },

    { "route": "/update-price",    "rewrite": "/api/update-price" },
    { "route": "/update-price/*",  "rewrite": "/api/update-price/*" },

    { "route": "/set-category",    "rewrite": "/api/set-category" },
    { "route": "/set-category/*",  "rewrite": "/api/set-category/*" },

    { "route": "/api/*",           "allowedRoles": ["anonymous"] },
    { "route": "/api/auth-login",  "allowedRoles": ["anonymous"] },
    { "route": "/api/auth-logout", "allowedRoles": ["anonymous"] },
    { "route": "/api/auth-me",     "allowedRoles": ["anonymous"] }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/assets/*", "/images/*", "/fonts/*"]
  },
  "responseOverrides": {
    "404": { "rewrite": "/index.html", "statusCode": 200 }
  },
  "globalHeaders": {
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
    "Access-Control-Allow-Headers": "Content-Type, Authorization",
    "X-Frame-Options": "SAMEORIGIN",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Permissions-Policy": "camera=(), microphone=(), geolocation=()"
  },
  "mimeTypes": {
    ".wasm": "application/wasm"
  }
}
